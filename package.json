{
  "name": "encoder-unlimited-automation",
  "version": "1.0.0",
  "description": "Automation framework using MCP, Playwright, and TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "test": "cross-env ENV=preview playwright test",
    "test:preview": "cross-env ENV=preview playwright test",
    "test:staging": "cross-env ENV=staging playwright test",
    "test:production": "cross-env ENV=production playwright test",
    "test:headed": "cross-env ENV=preview playwright test --headed",
    "test:headed:preview": "cross-env ENV=preview playwright test --headed",
    "test:headed:staging": "cross-env ENV=staging playwright test --headed",
    "test:headed:production": "cross-env ENV=production playwright test --headed",
    "test:debug": "cross-env ENV=preview playwright test --debug",
    "test:debug:preview": "cross-env ENV=preview playwright test --debug",
    "test:debug:staging": "cross-env ENV=staging playwright test --debug",
    "test:debug:production": "cross-env ENV=production playwright test --debug",
    "test:ui": "cross-env ENV=preview playwright test --ui",
    "test:ui:preview": "cross-env ENV=preview playwright test --ui",
    "test:ui:staging": "cross-env ENV=staging playwright test --ui",
    "test:ui:production": "cross-env ENV=production playwright test --ui",
    "test:allure": "cross-env ENV=preview playwright test && allure generate allure-results --clean -o allure-report && allure open allure-report",
    "test:allure:preview": "cross-env ENV=preview playwright test && allure generate allure-results --clean -o allure-report && allure open allure-report",
    "test:allure:staging": "cross-env ENV=staging playwright test && allure generate allure-results --clean -o allure-report && allure open allure-report",
    "test:allure:production": "cross-env ENV=production playwright test && allure generate allure-results --clean -o allure-report && allure open allure-report",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results",
    "mcp:server": "tsx src/mcp/server.ts",
    "mcp:client": "tsx src/mcp/client.ts",
    "dev": "tsx watch src/index.ts",
    "scan:secrets": "node scripts/scan-secrets.js",
    "prepare": "node -e \"try { require('husky').install() } catch (e) {}\""
  },
  "keywords": [
    "automation",
    "playwright",
    "mcp",
    "typescript",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@playwright/test": "^1.40.0",
    "playwright": "^1.40.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "allure-playwright": "^2.13.0",
    "cross-env": "^7.0.3",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
